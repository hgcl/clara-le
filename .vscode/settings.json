{
  // Nunjucks
  "files.associations": {
    "*.html": "njk"
  },
  "emmet.includeLanguages": {
    "njk": "html"
  },
  "nunjucksTemplate.preserveEmptyLine": 1,
  "[njk]": {
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "bounded"
  },
  "languageToolLinter.languageTool.ignoredWordsInWorkspace": [
    "lacto-fermented",
    "webmentions"
  ],
  "files.exclude": {
    "_config": true,
    "_data": true,
    "_includes": true,
    "_site": true,
    "functions": true,
    "node_modules": true,
    "public": true,
    "src/bookmarks/202[!6]*": true
  }
}
