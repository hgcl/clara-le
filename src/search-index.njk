{# Applied from https://www.hawksworx.com/blog/adding-search-to-a-jamstack-site/ #}

{"search" : [
{% for item in collections.posts %}
  {
    "url" : "{{ item.url }}",
    "title" : "{{ item.data.title }}",
    "text" : "{{ (item.data.title + " " + item.templateContent) | squash }}"
  }{% if not loop.last %},{% else %}{% endif %}
{% endfor %}
]}